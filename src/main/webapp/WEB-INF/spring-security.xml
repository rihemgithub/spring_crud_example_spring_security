	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="select login, password, true from userEntity where login = ?"
				authorities-by-username-query="select login, role from userEntity where login = ?" />
		</authentication-provider>
	</authentication-manager>
 
</beans:beans>